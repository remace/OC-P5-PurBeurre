    Button:
        text: "retour à l'accueil"
        on_press:root.manager.current='accueil'

<CategoryButton>:
    text: root.text
    on_press:
        root.click(self)
        root.parent.parent.parent.parent.manager.current='foods'

<foodsButton>:
    text: root.text
    on_press: root.click(self)

<FoodsScreen>:
    BoxLayout:
        orientation:'vertical'
        Label:
            text:'Screen foods'
        Button:
            text: "retour à l'accueil"
            on_press:root.manager.current='accueil'


<ItemScreen>:
    Label:
        text: 'Screen Item'
    Button:
        text: "retour à l'accueil"
        on_press:root.manager.current='accueil'


<FavouritesScreen>:
    BoxLayout:
        orientation:'vertical'
        Label:
            text: 'favourites screen'
        Button:
            text: "retour à l'accueil"
            on_press:root.manager.current='accueil'