# -*- coding: utf-8 -*-
<FirstScreen>:
    BoxLayout:
        orientation:'vertical'
        Label:
            id: 'db_state_label'
            text: root.db_state_text
            size_hint_y: 0.4
        Button:
            id: 'db_update_button'
            text:'mettre à jour la base de données'
            size_hint_y:0.2
            on_press: root.async_update_db()
        Button:
            text:"rechercher un produit alternatif à partir d'un produit existant"
            size_hint_y:0.2
            on_press: root.manager.current='categories'
        Button:
            text:"visualiser l'historique"
            size_hint_y:0.2
            on_press: root.manager.current='favourites'


ScrollView:
