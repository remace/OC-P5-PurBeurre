# -*- coding: ISO-8859-1 -*-

<FirstScreen>:
    state_lbl : db_state_label
    db_update_btn: db_update_button
    BoxLayout:
        orientation:'vertical'
        Label:
            id: db_state_label
            text: root.db_state_text
            size_hint_y: 0.4
        Button:
            text:"rechercher un produit alternatif à partir d'un produit existant"
            size_hint_y:0.2
            on_press:
                root.press_categories()
        Button:
            text:"visualiser les favoris"
            size_hint_y:0.2
            on_press:
                root.press_favourites()

        Button:
            id: db_update_button
            text:'mettre à jour la base de données'
            size_hint_y:0.2
            on_press: root.confirmation_popup()


<ItemView>:
    name : item_name
    ingredients : item_ingredients
    additives : item_additives
    nutriscore : item_nutriscore
    nutrients : item_nutrients
    labels : item_labels
    stores : item_stores
    barcode : item_barcode
    url : item_url
    favourite_btn : favourite_btn
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title:"Pur Beurre"
                    on_press:
                        root.parent.manager.current="accueil"
                ActionButton:
                    text: "liste des produits"
                    on_press:
                        root.parent.manager.current="foods"
        ScrollView:
            GridLayout:
                cols:2
                size_hint_y: None
#                 row_force_default: True
                row_default_height: 40
                height: self.minimum_height
                Label:
                    text: "produit: "
                Label:
                    id: item_name
                    text: ""


                Label:
                    text: "ingredients: "

                Label:
                    id: item_ingredients
                    text: ""
                    size_hint_y: None
                    text_size: self.width, None
#                    height: self.texture_size[1]

                Label:
                    text: "additives: "
                Label:
                    id: item_additives
                    text: ""

                Label:
                    text: "nutriscore:"
                Label:
                    id: item_nutriscore
                    text: ""

                Label:
                    text: "nutrients"
                Label:
                    id: item_nutrients
                    text: ""

                Label:
                    text: "labels: "
                Label:
                    id: item_labels
                    text: ""

                Label:
                    text: "magasins:"
                Label:
                    id: item_stores
                    text: ""

                Label:
                    text: "barcode"
                Label:
                    id: item_barcode
                    text: ""

                Button:
                    text: "URL vers openFoodFacts.fr"
                    id :item_url
                    on_press: root.click_link();

                Button:
                    id : favourite_btn
                    text : ""
                    on_press: root.on_click_favorite()
        Button:
            text: "rechercher un substitut"
            size_hint_y:0.1
            on_press:
                root.on_click_substitute()


<FoodsListItem>:
    name: item_name
    details_btn: details_btn
    favourite_btn: favourite_btn
    image: favourite_btn_image
    BoxLayout:
        pos_hint: {'top': 1}
        size: root.size
        orientation: 'horizontal'
        Label:
            id: item_name
            size_hint_x:0.45

        Button:
            id: details_btn
            size_hint_x:0.25
            text: "details"
            on_press:root.on_click_details()
        Button:
            text: "chercher un substitut"
            on_press:
                root.on_click_substitute()
            size_hint_x:0.25
        Button:
            id: favourite_btn
            size_hint_x: 0.05
            on_press:
                root.on_click_favorite()
                root.change_fav_image()
            Image:
                id: favourite_btn_image
                source: "./ressources/img/unfav_icon.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                height: 40
                width: self.parent.height * 0.75


<FoodsList>:
    foods_layout: foods_layout
    BoxLayout:
        size: root.size
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title:"Pur Beurre"
                    on_press:
                        root.manager.current="accueil"
                ActionButton:
                    text: "précédent"
                    on_press:
                        root.manager.current="categories"
        ScrollView:
            GridLayout:
                id: foods_layout
                cols: 1
                size_hint_y: None
                row_force_default: True
                row_default_height: 40
                height: self.minimum_height

<CategoryList>:
    cat_layout: cat_layout
    BoxLayout:
        size: root.size
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title:"Pur Beurre"
                    on_press:
                        root.manager.current="accueil"
                ActionButton:
                    text: "précédent"
                    on_press:
                        root.manager.current="accueil"
        ScrollView:
            GridLayout:
                size: root.size
                id: cat_layout
                size_hint_y: None
                cols: 1
                row_force_default: True
                row_default_height: 40
                height: self.minimum_height

<CategoryListItem>
    btn: btn
    Button:
        id: btn
        size: root.size
        pos_hint: {'top': 1}
        on_press: root.category_click()



<SubstituteListItem>:
    name: item_name
    details_btn: details_btn
    favourite_btn: favourite_btn
    image: favourite_btn_image
    BoxLayout:
        pos_hint: {'top': 1}
        size: root.size
        orientation: 'horizontal'
        Label:
            id: item_name
            size_hint_x:0.7
        Button:
            id: details_btn
            size_hint_x:0.25
            text: "details"
            on_press:root.on_click_details()

        Button:
            id: favourite_btn
            size_hint_x:0.05
            on_press:
                root.on_click_favorite()
                root.change_fav_image()
                root.reload_favourite_screen()
            Image:
                id: favourite_btn_image
                source: "./ressources/img/unfav_icon.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                height: 40
                width: self.parent.height * 0.75

